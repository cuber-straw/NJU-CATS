/* pages/result/result.wxss */
Page {
  width: 100%;
  height: 100%;
}
#canvas {
  width: 150px;
  height: 150px;
  position: absolute;
  left: -160px;
}

.capturedImg {
  width: 100%;
  height: 380rpx;
  margin: 0;
  padding: 0;
  z-index: 5;
}

.res-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}
.name {
  font-weight: 900;
  font-size: x-large;
  margin: 40rpx;
  width: fit-content;
  border-bottom-style: solid;
}
.line {
  height: 2rpx;
  margin-left: 175rpx;
  width: 575rpx;
  border-style: none;
  background-color: #eee;
}

.info-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 17rpx 40rpx;
}
.cat-profile {
  width: 100rpx;
  height: 100rpx;
  border-style: solid;
  border-color: #eee;
  border-radius: 50%;
  border-width: 1rpx;
}
text {
  color: #6e6e6e;
  margin-left: 35rpx;
  font-size: small;
}
