/** index.wxss **/

Page {
  width: 100%;
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  height: 100%;
  width: 100%;
  perspective: 800px;
}

.card {
  width: 80%;
  border-style: none;
  border-radius: 20px;
  align-items: center;
  display: flex;
  flex-direction: column;
  box-shadow: 
  0px 10px 35px rgba(0, 0, 0, 0.3);
  overflow: hidden;
  margin-top: 5vh;
  height: 70vh;
  /* transform: rotateX(-5deg); */
  padding-bottom: 5px;
}

.calendar {
  position: absolute;
  margin-top: 20rpx;
  margin-left: 40rpx;
  align-self: flex-start;
  z-index: 5;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.calendar image {
  width: 75rpx;
  height: 75rpx;
}

.calendar text {
  color: white;
  font-size: 10px;
}

.todaysCat {
  width: 100%;
  height: 62%;
  opacity: 0.85;
}
.titleText{
  height: 13%;
  line-height: 9.5vh;
  margin-top: 6px;
}
.shortInfo {
  width: 88%;
  color: #8a8a8a;
  height: 8em;
  font-size: x-small;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 6;
  overflow: hidden;
}
.buttons {
  display: grid;
  width: 100%;
  /* height: 24%; */
  justify-content: center; /* 水平居中 */
  align-content: center; /* 垂直居中 */
  /* 定义每一行的行高 */
  grid-template-rows: 36px 36px;
  /* 定义每一列的列宽 */
  grid-template-columns: 115px 115px;
}

.btn {
  height: 26px;
  width: 90px;
  border-style: solid;
  border-width: 1px;
  border-color: #d8d8d8;
  border-radius: 15px;
  margin: auto;
  overflow: hidden;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.un-answered {
  height: 26px;
  line-height: 26px;
  text-align: center;
  color: #8a8a8a;
  font-size: smaller;
}

.clicked-btn {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}
.chagou { 
  height: 18px;
  width: 18px;
}

.selectFromAlbum-btn {
  border-style: none;
  font-size: small;
  height: 10vh;
  line-height: 10vh;
}

.camera-btn {
  height: 11vh;
  width: 55vw;
  border-radius: 5.5vh;
  background-color: #6d74e6;
  text-align: center;
  line-height: 11vh;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.3);
  font-size: larger;
  font-weight: 900;
  color: white;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.camera-icon {
  height: 6vh;
  width: 6vh;
  margin-right: 3vw;
}
