/* pages/info/info.wxss */
page {
  height: 100%;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
}
.cat-profile {
  width: 100%;
  height: 380rpx;
  background-color: #d8d8d8;
}
.info {
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}
.info .name {
  font-weight: 900;
  font-size: x-large;
  margin: 15rpx;
  width: fit-content;
  border-bottom-style: solid;
}

.info .head {
  margin: 15rpx;
  font-weight: 600;
}
.main {
  font-weight: 400;
  color: #6e6e6e;
}

.like {
  position: fixed;
  bottom: 80px;
  right: 55rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-evenly;
  border-style: none;
  border-radius: 50%;
  border-width: 1px;
  background-color: white;
  align-self: flex-end;
  box-shadow: 1px 1px 3px rgba(0, 0, 0, 0.7);
  height: 50px;
  width: 50px;
  box-sizing: border-box;
}

.aixin {
  width: 25px;
  height: 25px;
}

.like text {
  font-size: small;
}

/* 最底部的留言区 */
.comment {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 14rpx 25rpx 20rpx 25rpx;
  width: 100%;
  box-sizing: border-box;
}

.comment button {
  background-color: white;
  font-size: small;
  font-weight: 400;
  width: 700rpx !important;
  border-style: solid;
  border-width: 1px;
  border-radius: 8px;
  border-color: #d8d8d8;
  height: 32px;
  line-height: 14px;
  text-align: center;
  color: #d8d8d8;
}

.comment .input {
  box-sizing: border-box;
  height: 32px;
  flex-grow: 4;
  border-style: solid;
  border-color: #d8d8d8;
  border-radius: 8px;
  border-width: 1px;
  width: 540rpx;
  margin-right: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.comment .input input {
  padding-left: 15px;
}

.comment .button {
  flex-grow: 1;
  border-radius: 8px;
  background-color: #b5c4f0;
  height: 32px;
  line-height: 32px;

  width: 140rpx;
  margin-left: 10rpx;
  text-align: center;
  font-weight: 400;
  font-size: small;
}
