/* pages/search/search.wxss */
page {
  height: 100%;
}
.container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  height: 100%;
}

.search-bar-wrapper {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0px 0px 8px rgba(0, 0, 0, 0.1);
}

.search-bar {
  border-style: solid;
  border-width: 2rpx;
  border-radius: 30rpx;
  border-color: #d8d8d8;
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 70vw;
  margin-top: 60rpx;
  margin-bottom: 70rpx;
}

.search-img {
  width: 60rpx;
  height: 60rpx;
  padding: 5rpx 10rpx;
}

.clear-img{
  width:60rpx;
  height:60rpx;
}

.noData{
  text-align: center;
  color: #0f02023b;
}


.text-input {
  border-style: none;
  padding-left: 10rpx;
  width: 70%;
  font-size: small;
  color: #6e6e6e;
}
.info-item {
  width: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 17rpx 40rpx;
}

.cat-profile {
  width: 100rpx;
  height: 100rpx;
  border-style: solid;
  border-color: #eee;
  border-radius: 50%;
  border-width: 1rpx;
}

text {
  color: #6e6e6e;
  margin-left: 35rpx;
  font-size: small;
}

.line {
  height: 2rpx;
  margin-left: 175rpx;
  width: 575rpx;
  border-style: none;
  background-color: #eee;
}